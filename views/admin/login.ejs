<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  </head>
  <body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-100">
    <div class="bg-white shadow-2xl rounded-3xl p-10 w-full max-w-md relative mx-4">
      <div class="absolute -top-8 left-1/2 -translate-x-1/2 bg-blue-600 text-white p-4 rounded-full shadow-md">
        <i class="fa-solid fa-user-lock text-2xl"></i>
      </div>
      <h1 class="text-4xl font-bold text-center text-gray-800 mt-6 mb-8 tracking-wide">ADMIN LOGIN</h1>
      <form id="formLogin" class="space-y-5">
        <div>
          <label for="username" class="block text-gray-700 font-medium mb-1">
            <i class="fa-solid fa-user text-blue-600 mr-1"></i>
            Tên tài khoản
          </label>
          <input type="text" id="username" class="w-full border border-gray-300 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" />
        </div>
        <div>
          <label for="password" class="block text-gray-700 font-medium mb-1">
            <i class="fa-solid fa-lock text-blue-600 mr-1"></i>
            Mật khẩu
          </label>
          <input type="password" id="password" class="w-full border border-gray-300 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" />
        </div>
        <p id="errorMessage" class="text-center font-medium" style="color: red"></p>
        <a href="admin/forget-password" class="text-blue-800 block text-right hover:underline"> Quên mật khẩu </a>
        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-xl shadow-lg transition-all transform hover:scale-[1.02]">
          <i class="fa-solid fa-right-to-bracket mr-2"></i>
          Đăng nhập
        </button>
      </form>
    </div>
  </body>
  <script>
    document.getElementById('formLogin').addEventListener('submit', async (e) => {
      e.preventDefault();
      let username = document.getElementById('username').value;
      let password = document.getElementById('password').value;
      const res = await fetch('/admin/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password }),
      });
      let result = await res.json();
      if (res.ok) {
        location.href = result.redirectUrl;
      } else {
        document.getElementById('errorMessage').innerText = result.error;
      }
    });
  </script>
</html>
