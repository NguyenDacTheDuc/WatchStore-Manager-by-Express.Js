<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Category</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  </head>
  <body class="flex-col">
    <div class="flex">
      <nav class="w-1/8"><%- include("./nav.ejs") %></nav>
      <div class="flex-1 flex-col bg-[url('/picture/adminHome.png')] bg-cover">
        <div>
          <p class="text-5xl font-bold text-white text-center pt-5">Quản Lý Thể Loại</p>
        </div>
        <div class="flex items-center mt-[30px] ms-11">
          <form id="form">
            <button type="button" id="undisabled" class="me-8 text-xl bg-blue-600 text-white font-semibold py-2 px-3 rounded-xl shadow-lg transition-all transform hover:scale-[1.02] mx-auto">
              <i class="fa-solid fa-plus text-white"></i>
              Thêm
            </button>
            <input
              type="text"
              id="name"
              class="me-4 border border-gray-300 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
              placeholder="Tên thể loại"
              disabled
            />
            <button id="save" type="submit" class="text-xl bg-green-800 text-white font-semibold py-2 px-3 rounded-xl shadow-lg transition-all transform" disabled>
              <i class="fa-solid fa-check text-white"></i>
              Lưu
            </button>
          </form>
        </div>
        <div class="ms-[178px] mt-2 h-[30px]">
          <p id="success" class="text-green-500 font-bold text-xm"></p>
          <p id="error" class="text-red-500 font-bold text-xm"></p>
        </div>
        <div>
          <table class="w-1/2 text-center mx-auto">
            <tr class="bg-gray-800 text-white">
              <th class="py-3">STT</th>
              <th class="py-3">Tên thể loại</th>
              <th class="py-3">Chức năng</th>
            </tr>
            <% categories.forEach((category, index) => { %>
            <tr class="bg-white hover:bg-gray-50 transition">
              <td class="px-4 py-2"><%= ++index %></td>
              <td class="px-4 py-2 w-1/2"><%= category.name %></td>
              <td class="flex justify-around py-2">
                <button class="bg-yellow-500 px-7 py-1 rounded-full update" data-id="<%= category.id %>" data-name="<%= category.name %>"><i class="fas fa-edit"></i> Sửa</button>
                <button class="bg-red-500 px-7 py-1 rounded-full delete" data-id="<%= category.id %>"><i class="fas fa-trash-can"></i> Xóa</button>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
        <div class="flex justify-center mt-6">
          <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="mx-1 px-3 py-1 rounded-lg <%= currentPage === i ? 'bg-blue-600 text-white' : 'bg-gray-300 text-gray-700 hover:bg-blue-400 hover:text-white transition' %>">
            <%= i %>
          </a>
          <% } %>
        </div>
      </div>
    </div>
    <footer><%- include("./footer.ejs") %></footer>
  </body>
  <script>
    let editId = null;
    document.getElementById('undisabled').addEventListener('click', (e) => {
      document.getElementById('name').removeAttribute('disabled');
      document.getElementById('save').removeAttribute('disabled');
    });
    document.getElementById('form').addEventListener('submit', async (e) => {
      e.preventDefault();
      let name = document.getElementById('name').value.trim();
      if (!name) {
        document.getElementById('error').innerText = 'Bạn cần nhập thông tin';
        document.getElementById('success').innerText = '';
        return;
      }
      let url = '/admin/category';
      let method = 'POST';
      if (editId) {
        url = `/admin/category/${editId}`;
        method = 'PUT';
      }
      try {
        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          credentials: 'same-origin',
          body: JSON.stringify({ name }),
        });
        const result = await res.json();
        if (res.ok) {
          location.reload();
        } else {
          document.getElementById('error').innerText = result.error;
        }
      } catch (error) {
        console.log(error);
        document.getElementById('error').innerText = 'Không thể kết nối tới server';
      }
    });
    document.querySelectorAll('.update').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        editId = btn.dataset.id;
        const name = btn.dataset.name;
        document.getElementById('name').removeAttribute('disabled');
        document.getElementById('save').removeAttribute('disabled');
        document.getElementById('name').value = name;
      });
    });
    document.querySelectorAll('.delete').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        const id = btn.dataset.id;
        if (!confirm('Bạn có chắc muốn xóa không?')) return;
        try {
          const res = await fetch(`/admin/category/${id}`, {
            method: 'DELETE',
            credentials: 'same-origin',
          });
          console.log(res.status);
          if (res.ok) {
            location.reload();
          }
        } catch (error) {
          console.log(error);
          document.getElementById('error').innerText = 'Không thể kết nối tới server';
        }
      });
    });
  </script>
</html>
