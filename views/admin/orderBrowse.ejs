<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Browse</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  </head>
  <body class="flex-col">
    <div class="flex">
      <nav class="w-1/8"><%- include("./nav.ejs") %></nav>
      <div class="flex-1 flex-col bg-[url('/picture/adminHome.png')] bg-cover">
        <div>
          <p class="text-5xl font-bold text-white text-center pt-5">Duyệt đơn hàng</p>
        </div>
        <div class="mt-[50px]">
          <table class="w-[95%] text-center mx-auto mt-2">
            <tr class="bg-gray-800 text-white">
              <th class="py-3">STT</th>
              <th class="py-3">Mã đơn hàng</th>
              <th class="py-3">Ngày đặt hàng</th>
              <th class="py-3">Tên khách hàng</th>
              <th class="py-3">Số điện thoại</th>
              <th class="py-3">Địa chỉ</th>
              <th class="py-3">Tổng tiền</th>
              <th class="py-3">Chức năng</th>
            </tr>
            <% orders.forEach((order, index) => { %>
            <tr class="bg-white hover:bg-gray-50 transition">
              <td class="px-4 py-2"><%= ++index %></td>
              <td class="px-4 py-2"><%= order.id %></td>
              <td class="px-4 py-2"><%= order.orderDate.toLocaleDateString('vi-VN') %></td>
              <td class="px-4 py-2"><%= order.Customer.name %></td>
              <td class="px-4 py-2"><%= order.Customer.phone %></td>
              <td class="px-4 py-2"><%= order.Customer.address %></td>
              <td class="px-4 py-2"><%= order.totalAmount.toLocaleString() %></td>
              <td class="flex justify-center py-2 mt-1 gap-4 items-center">
                <button class="bg-yellow-500 px-7 py-2 rounded-full show" data-id="<%= order.id %>"><i class="fas fa-eye"></i> Xem chi tiết</button>
                <button class="bg-green-500 px-7 py-2 mt-1 rounded-full confirm" data-id="<%= order.id %>"><i class="fas fa-check"></i> Xác nhận</button>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
        <div class="flex justify-center mt-6">
          <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="mx-1 px-3 py-1 rounded-lg <%= currentPage === i ? 'bg-blue-600 text-white' : 'bg-gray-300 text-gray-700 hover:bg-blue-400 hover:text-white transition' %>">
            <%= i %>
          </a>
          <% } %>
        </div>
      </div>
    </div>
    <footer><%- include("./footer.ejs") %></footer>
  </body>
  <script>
    document.querySelectorAll('.show').forEach((btn) => {
      btn.addEventListener('click', (e) => {
        let id = btn.dataset.id;
        location.href = `/admin/order/${id}`;
      });
    });
    document.querySelectorAll('.confirm').forEach((btn) => {
      btn.addEventListener('click', async (e) => {
        let orderId = btn.dataset.id;
        try {
          const res = await fetch(`/admin/order/confirm`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ orderId }),
          });
          if (res.ok) {
            location.reload();
          }
        } catch (error) {
          alert('Có lỗi k thể xác nhận đơn hàng!');
        }
      });
    });
  </script>
</html>
